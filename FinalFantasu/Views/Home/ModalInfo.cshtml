
@{
    FinalFantasu.Models.User userInfo = (FinalFantasu.Models.User)@Session[FinalFantasu.Utils.SessionUtils.SESSION.UserInfo];
    Layout = null;
}
@if (userInfo != null)
{
    <div class="modal" tabindex="-1" role="dialog" id="modalUser">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>Họ Tên</th>
                            <td>@userInfo.Fullname</td>
                        </tr>
                        <tr>
                            <th>Ngày sinh</th>
                            <td>@userInfo.Birthday</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@userInfo.Email</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@userInfo.Phone</td>
                        </tr>
                        <tr>
                            <th>Giới tính</th>
                            <td>@userInfo.Gender</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <a style="color:white" href="/User/Infor" class="btn btn-danger">Quản lý thông tin</a>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnShowInfo").click(function () {
            $("#modalUser").modal('show');
        });
        $("#btnHideModal").click(function () {
            $("#modalUser").modal('hide');
        });
    }
</script>
